@namespace MakoBlog.Client.MakoBlogUi.Pages
@page "/about"

@inject HttpClient httpClient

@if (about != null)
{
	<h1>@about.Title</h1>
	<MarkdownRenderer Text="@about.Body" />
}

@code {
	private AboutModel about;

	protected override async Task OnInitializedAsync()
	{
		about = await httpClient.GetFromJsonAsync<AboutModel>("about.json")
		.ConfigureAwait(false);
	}
}